<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Creator name</th>
      <th>Creator uuid</th>
      <th>Answer</th>
      <th>Answer name</th>
      <th>Answer uuid</th>
      <th>Course session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question %></td>
        <td><%= question.creator_name %></td>
        <td><%= question.creator_uuid %></td>
        <td><%= question.answer %></td>
        <td><%= question.answer_name %></td>
        <td><%= question.answer_uuid %></td>
        <td><%= question.course_session_id %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

